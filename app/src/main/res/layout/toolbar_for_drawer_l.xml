<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:orientation="horizontal"
    android:background="@color/col1">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/app_name_alt"
        android:layout_weight="10"
        android:fontFamily="@font/audiowide"
        android:gravity="start|center"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:textSize="32sp"
        android:textColor="@android:color/white"/>

    <RelativeLayout
        android:id="@+id/cart_toolbar_container"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp">
        <ImageView
            android:id="@+id/cart_toolbar_image"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_local_grocery_store_black_24dp"/>

        <TextView
            android:id="@+id/cart_amount"
            android:elevation="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:layout_alignParentRight="true"
            android:textColor="@color/col2"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="8dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/menu_more_vert"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:layout_marginHorizontal="8dp"
        />

</LinearLayout>